#!/bin/bash

# Script to build PDF documentation
# Usage: ./bin/build-pdf

set -e

echo "Building PDF documentation..."

# Navigate to project root
cd "$(dirname "$0")/.."

# Clean previous build
rm -rf docs/latex

# Build LaTeX files
echo "Generating LaTeX files..."
sphinx-build -b latex src docs/latex

# Build PDF from LaTeX
echo "Building PDF from LaTeX..."
cd docs/latex
make

echo "PDF built successfully!"
echo "Output: docs/latex/kukgini.pdf"

